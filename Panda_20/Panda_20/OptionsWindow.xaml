<controls:MetroWindow x:Class="Panda_20.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:properties="clr-namespace:Panda_20.Properties"
        xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Title="Options" Height="404" Width="641"
        Icon="resources/panda.ico">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colours.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
<controls:MetroWindow.WindowCommands>
    <controls:WindowCommands>
        <Button Content="about" />
    </controls:WindowCommands>
    </controls:MetroWindow.WindowCommands>

    <StackPanel x:Name="MainContentStackPanel" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" >
        <StackPanel Margin="10,5">
            <TabControl>
                <TabItem Header="general">

                    <Grid MaxHeight="400" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="General settings" FontSize="18" Grid.Column="0" Grid.Row="0" />
                        <controls:ToggleSwitch Name="SwitchStartUp" Header="Start Panda when Windows starts" Grid.Row="1" Grid.Column="0"  
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=start_with_windows, Mode=TwoWay}"/>
                        
                        <controls:ToggleSwitch Name="SwitchSound" Header="Sound" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0"
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=notifications_play_sound, Mode=TwoWay}"/>
                        <Grid Name="TowerHeightGrid" Row="3" Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Notification settings" FontSize="18" Grid.Row="0"/>
                            <Label Content="Display a maximum of " Grid.Column="0" Grid.Row="1"/>
                            <ComboBox Name="ComboBoxTowerHeight" Width="75" Grid.Column="1" Grid.Row="1" 
                                      SelectedItem="{Binding Source={x:Static properties:Settings.Default}, Path=notifications_max_amount, Mode=TwoWay}">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="{x:Type sys:Int32}">
                                        <sys:Int32>1</sys:Int32>
                                        <sys:Int32>2</sys:Int32>
                                        <sys:Int32>3</sys:Int32>
                                        <sys:Int32>4</sys:Int32>
                                        <sys:Int32>5</sys:Int32>
                                        <sys:Int32>6</sys:Int32>
                                        <system:Int32>7</system:Int32>
                                        <system:Int32>8</system:Int32>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>
                            <Label Content=" at a time." Grid.Column="2" Grid.Row="1"/>
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="posts">
                    <Grid MaxHeight="400" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="Post notification settings" FontSize="18" Grid.Row="0"/>
                        <controls:ToggleSwitch Name="SwitchNotifyPosts"  Header="Display notifications" Grid.Row="1" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=posts_display_notifications, Mode=TwoWay}"/>
                        <controls:ToggleSwitch Name="SwitchOwnPosts" Header="Show own posts" Grid.Row="2" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=posts_display_own, Mode=TwoWay}"/>
                        <controls:ToggleSwitch Name="SwitchPostSounds" Header="Play a sound on notifications" Grid.Row="3" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=posts_play_sound, Mode=TwoWay}"/>

                        <Label Content="Time limit settings" FontSize="18" Grid.Row="4"/>

                        <Grid Name="PostTimeLimitGrid" Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Warn me when a post is " Grid.Row="0" Grid.Column="0" />
                            <ComboBox Name="ComboBoxPostLimit" Grid.Row="0" Grid.Column="1" Width="75" ToolTip="Panda will notify you when half the time has passed." 
                                      ItemsSource="{Binding Source={x:Static properties:Settings.Default}, Path=time_limit_values, Mode=OneWay}" 
                                      SelectedItem="{Binding Source={x:Static properties:Settings.Default}, Path=posts_time_limit, Mode=TwoWay}"/>
                            <Label Content=" minutes old." Grid.Row="0" Grid.Column="2" />
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="messages">
                    <Grid MaxHeight="400" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="Private message notification settings" FontSize="18" Grid.Row="0"/>
                        <controls:ToggleSwitch Name="SwitchNotifyPm"  Header="Display notifications" Grid.Row="1" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=messages_display_notifications, Mode=TwoWay}"/>

                        <controls:ToggleSwitch Name="SwitchPmSounds" Header="Play a sound on notifications" Grid.Row="2" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=messages_play_sound, Mode=TwoWay}"/>

                        <Label Content="Time limit settings" FontSize="18" Grid.Row="4"/>

                        <Grid Name="PmTimeLimitGrid" Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Warn me when a private message is " Grid.Row="0" Grid.Column="0" />
                            <ComboBox Name="ComboBoxPmLimit" Grid.Row="0" Grid.Column="1" Width="75" ToolTip="Panda will notify you when half the time has passed."
                                      ItemsSource="{Binding Source={x:Static properties:Settings.Default}, Path=time_limit_values, Mode=OneWay}" 
                                      SelectedItem="{Binding Source={x:Static properties:Settings.Default}, Path=messages_time_limit, Mode=TwoWay}"/>
                            <Label Content=" minutes old." Grid.Row="0" Grid.Column="2" />
                        </Grid>
                    </Grid>
                </TabItem>

                <TabItem Header="comments">
                    <Grid MaxHeight="400" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Content="Comment notification settings" FontSize="18" Grid.Row="0"/>
                        <controls:ToggleSwitch Name="SwitchNotifyComment"  Header="Display notifications" Grid.Row="1" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=comments_display_notifications, Mode=TwoWay}"/>
                        <controls:ToggleSwitch Name="SwitchCommentsOwnPosts" Header="Show comments on own posts" Grid.Row="2" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=comments_display_own, Mode=TwoWay}"/>
                        <controls:ToggleSwitch Name="SwitchCommentSounds" Header="Play a sound on notifications" Grid.Row="3" 
                                               IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=comments_play_sound, Mode=TwoWay}"/>

                        <Label Content="Time limit settings" FontSize="18" Grid.Row="4"/>

                        <Grid Name="CommentTimeLimitGrid" Grid.Row="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Warn me when a comment is " Grid.Row="0" Grid.Column="0" />
                            <ComboBox Name="ComboBoxCommentLimit" Grid.Row="0" Grid.Column="1" Width="75" ToolTip="Panda will notify you when half the time has passed."
                                      ItemsSource="{Binding Source={x:Static properties:Settings.Default}, Path=time_limit_values, Mode=OneWay}" 
                                      SelectedItem="{Binding Source={x:Static properties:Settings.Default}, Path=comments_time_limit, Mode=TwoWay}"/>
                            <Label Content=" minutes old." Grid.Row="0" Grid.Column="2" />
                        </Grid>
                    </Grid>
                </TabItem>
                
                <TabItem Header="advanced" Margin="-4,-1,4,1">
                    <Grid MaxHeight="400" MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>    
                            
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Button Name="ButtonClearCredentials" Style="{DynamicResource SquareButtonStyle}" Width="120" Margin="0,10,0,0">clear credentials</Button>
                        <Button Name="ButtonDefaults" Style="{DynamicResource SquareButtonStyle}" Width="120" Grid.Row="1" Margin="0,10,0,0">reset to default</Button>
                    </Grid>
                </TabItem>
                
            </TabControl>
        </StackPanel>

        <DockPanel  x:Name="SaveButtons" Margin="10" HorizontalAlignment="Right" Width="Auto">
            <Button Name="ButtonSave" HorizontalAlignment="Right"  MinWidth="93"  Style="{DynamicResource SquareButtonStyle}" Click="ButtonSave_Click">Save</Button>
            <Button Name="ButtonClose" HorizontalAlignment="Right"  MaxWidth="93" Margin="10,0,0,0" Width="120" Style="{DynamicResource SquareButtonStyle}" Click="CloseOptionsWinodw">Close</Button>
        </DockPanel>
    </StackPanel>

</controls:MetroWindow>
