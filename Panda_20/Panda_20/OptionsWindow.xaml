<Window x:Class="Panda_20.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:properties="clr-namespace:Panda_20.Properties"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="OptionsWindow" Height="350" Width="600">

    <StackPanel x:Name="MainContentStackPanel" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" >

        <Label x:Name="PageDescriptionLabel" FontSize="17" Margin="10,0,0,0">OPTIONS</Label>

        <StackPanel Margin="10,5">
            
            <Grid x:Name="ShowNotificationsWhenGrid" Margin="10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="Auto" />
                    
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Content="SHOW NOTIFICATIONS WHEN"/>
                <CheckBox  Grid.Row="1" Content="People posts on wall" Margin="5" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=allow_notifications_posts_from_others, Mode=TwoWay}" />
                <CheckBox  Grid.Row="2" Content="People comments on post" Margin="5" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=allow_notifications_comments_from_others, Mode=TwoWay}"/>
                <CheckBox  Grid.Row="3"  Content="People comments on post" Margin="5" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=allow_notifications_posts_from_self, Mode=TwoWay}"/>
                <CheckBox  Grid.Row="4" Content="Page comments on post" Margin="5" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=allow_notifications_comments_from_self, Mode=TwoWay}"/>
            </Grid>

            <Separator Margin="10,5" Visibility="Hidden"></Separator>

            <Grid x:Name="AdvancedSettingsGrid" Margin="10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
    

                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Content="ADVANCED SETTINGS"/>
                <CheckBox  Grid.Row="1" Content="Notify when someone comments on a post made by the page" Margin="5" IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=allow_notifications_comments_on_self_posts, Mode=TwoWay}"/>

            </Grid>



        </StackPanel>




        <DockPanel  x:Name="SaveButtons" Margin="10" HorizontalAlignment="Right" Width="auto">
            <Button HorizontalAlignment="Right"  MinWidth="93">OK</Button>
            <Button HorizontalAlignment="Right"  MaxWidth="93" Margin="10,0,0,0" Width="120">Defaults</Button>
        </DockPanel>
    </StackPanel>

</Window>
