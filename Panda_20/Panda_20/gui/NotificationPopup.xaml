<Window x:Class="Panda_20.gui.NotificationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Title="Notification" Height="100" Width="300"
        WindowStyle="None"  Background="Transparent"  AllowsTransparency="True" >

    <Border BorderBrush="LightGray"  BorderThickness="3,3,3,3" CornerRadius="8,8,0,0" Opacity="0.95" Margin="0,0,0,0" >

        <Grid Background="White" Margin="0,0,0,0">

            <Rectangle Name="ColorRectangle" Fill="LightGray" Height="21" VerticalAlignment="Top" Margin="-1,-1,-1,0" HorizontalAlignment="Right" Width="296"/>
            <Image Name="UserImage" Width="50" Height="50" Margin="3,23,239.4,21.4"/>
            <TextBlock Name="Message" Margin="60,23,4.4,4.4" Background="White" TextTrimming="WordEllipsis" TextWrapping="Wrap"/>
            <TextBlock Name="UserName" HorizontalAlignment="Left" Height="16" Margin="28,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
            <Image Name="IconImage" HorizontalAlignment="Left" Height="16" Margin="5,2,0,0" VerticalAlignment="Top" Width="16"/>
            <TextBlock Name="UserFriends" HorizontalAlignment="Left" TextAlignment="Center" Margin="4,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="14"/>
            <Button Name="DismissButton" Grid.Row="0"  Height="16" Width="16" Margin="274,2,4.4,76.4" Click="DismissButton_OnClick">
                <TextBlock VerticalAlignment="Center">x</TextBlock>
            </Button>
            <Button Name="FacebookButton" Grid.Row="0"  Height="16" Width="16" Margin="253,2,25.4,76.4" Click="FacebookButton_OnClick">
                <TextBlock VerticalAlignment="Center">f</TextBlock>
            </Button>

        </Grid>
    </Border>

</Window>

